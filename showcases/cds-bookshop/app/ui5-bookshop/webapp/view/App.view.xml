<mvc:View xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc">
    <App>
        <pages>
            <Page title="Northwind Products">
                <content>
                    <Table growing="true" growingThreshold="5" inset="false" width="auto" items="{ path: 'northwind>/Products' }" busyIndicatorDelay="0" mode="None">
                        <headerToolbar>
                            <OverflowToolbar class="">
                                <Title id="title" text="Products" level="H2" />
                            </OverflowToolbar>
                        </headerToolbar>

                        <noData>
                            <IllustratedMessage illustrationType="sapIllus-NoData" />
                        </noData>
                        <columns>
                            <Column>
                                <Text text="Name" />
                            </Column>
                            <Column>
                                <Text text="Price" />
                            </Column>
                        </columns>
                        <items>
                            <ColumnListItem>
                                <Text text="{northwind>ProductName}" maxLines="1" />
                                <Text text="{northwind>UnitPrice}" maxLines="1" />
                            </ColumnListItem>
                        </items>
                    </Table>
                </content>
            </Page>
        </pages>
    </App>
</mvc:View>
