{
  "compilerOptions": {
    "target": "es2022",
    "module": "es2022",
    "skipLibCheck": true,
    "preserveConstEnums": true,
    "inlineSourceMap": true,
    "allowJs": true,
    "strict": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": false,
    "moduleResolution": "node",
    "rootDir": "webapp",
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "ui5/ecosystem/demo/tsapp/*": ["webapp/*"],
      "ui5/ecosystem/demo/tslib/*": ["./node_modules/ui5-lib-ts/src/ui5/ecosystem/demo/tslib/*"]
    }
  },
  "include": ["webapp/**/*"]
}
